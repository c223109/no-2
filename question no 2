#include<stdio.h>
int main()
{
    int i;
    for(i=1;i<=8;i++)
    {
         if(i==1)
         {
             printf("      ");
             printf("*\n");
         }
         if(i==2)
         {
             printf("    ");
             printf("* * *\n");
         }
         if(i==3)
         {
             printf("  ");
             printf("* * * * *\n");
         }
         if(i==4)
         {
             printf("* * * * * * *\n");
         }
         if(i==5)
         {
             printf("* * * * * * *\n");
         }
         if(i==6)
         {
             printf("  ");
             printf("* * * * *\n");
         }
         if(i==7)
         {
             printf("    ");
             printf("* * *\n");
         }
          if(i==8)
         {
             printf("      ");
             printf("*\n");
         }
    }
    return 0;
}
